{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "ignorePatterns": [
    "lib",
    "test"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "require-jsdoc": "off",
    "max-len": [
      "error",
      {
        "code": 80,
        "ignorePattern": "^import .*|^export .*"
      }
    ]
  }
}
